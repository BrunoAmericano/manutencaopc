{
  "name": "Java 17 + Spring Boot",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "echo 'JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64' >> ~/.bashrc && echo 'export PATH=$JAVA_HOME/bin:$PATH' >> ~/.bashrc && source ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "redhat.vscode-xml",
        "eamodio.gitlens"
      ]
    }
  }
}
